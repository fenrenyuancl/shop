<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.cl.shop.model.Product" table="product">
		<id name="pid" >
			<generator class="native"></generator>
		</id>
		<property name="category"></property>
		<property name="cname"></property>
		<property name="ename"></property>
		<property name="is_hot"></property>
		<property name="image"></property>
		<property name="descn"></property>
		<property name="listprice"></property>
		<property name="pdate"></property>
		<property name="unitcost"></property>
		<property name="cid"></property>
	</class>
</hibernate-mapping>